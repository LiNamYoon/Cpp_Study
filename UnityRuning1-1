	int num1, num2;
	
	// 숫자 2개를 저장한다.	
	num1 = 123;
	num2 = 456;

	// 저장된 숫자를 더한다.
	result = num1 + num2;
	
	// 출력 ("내용  %d(출력하고자 하는 것의 형태)  ", 출력하고자 하는 것) 
	printf("더한 값은 %d 입니다.\n", result);
	
	// 소수 float -------------------------------------------------------------

	// 더한 결과 값 저장소
	float _result;

	// 정수형 숫자 2개를 저장할 곳
	float _num1, _num2;

	// 숫자 2개를 저장한다.	
 	_num1 = 123.1f; //소수에 f를 붙이지 않으면 double로 인식한다. 그래서 에러가 난다.
	_num2 = 456.4f;

	// 저장된 숫자를 더한다.
	_result = _num1 + _num2;

	// 출력 ("내용  %f(출력하고자 하는 것의 형태)  ", 출력하고자 하는 것) 
	printf("더한 값은 %f 입니다.\n", _result);
	
	*/
	
	// 출력하는 법 --------------------------------------------------------------------------
