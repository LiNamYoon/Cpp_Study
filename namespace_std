// namespace_std (cout, endl, cin)에 대한 내용 //예시) 원 둘레, 원 면적 구하는 공식
#include <iostream>
using namespace std; // cout, endl 함수를 사용할 수 있는 namespace 

void main()
{
	int Sum, A, B, C;
	float Ar;

	A = 10;
	B = 20;
	C = 35;
	Sum = A + B + C;
	Ar = Sum / (float)3;

	cout << Sum;  // cout = 콘솔창에 텍스트를 기입할 때 사용
	
	cout << " / ";
	cout << Ar << endl; // endl = 문서를 작성할 때 한줄 밑으로 내릴 때 사용


	// 작업 내용 나누기
	cout << "_______________________________________________________________________" << endl << endl;
	

	int num1, num2;

	cout << "정수 1 입력 : ";
	cin >> num1; // cin = 키보드에 입력한 내용을 num1 변수에 적용된다.

	cout << "정수 2 입력 : ";
	cin >> num2;

	// 사칙연산 적용해본 예시
	cout << num1 << " + " << num2 << " = " << num1 + num2 << endl;
	cout << num1 << " - " << num2 << " = " << num1 - num2 << endl;
	cout << num1 << " * " << num2 << " = " << num1 * num2 << endl;
	cout << num1 << " / " << num2 << " = " << num1 / num2 << endl;



	// 작업 내용 나누기
	cout << "_______________________________________________________________________" << endl << endl;


	int r;	// 원 반지름
	float CircleArea;	// 원 면적
	float Circleference;	// 원 둘레
	
	cout << "반지름 입력 : ";
	cin >> r; //반지름 기입

	CircleArea = r*r*(float)3.14; // 원 면적 공식
	Circleference = 2 * r*(float)3.14; // 원 둘레 공식

	cout << "원 면적 : " << CircleArea << endl;
	cout << "원 둘레 : " << Circleference << endl;

};
